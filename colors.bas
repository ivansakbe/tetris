sub colors (color as integer) //Da el color a cada ficha 
	if color=0 then
		setcolor 0,0,0 
	elseif color=1 then
		setcolor 170,0,0
	elseif color=2 then
		setcolor 192,192,192
	elseif color=3 then
		setcolor 170,0,170
	elseif color=4 then
		setcolor 0,0,170
	elseif color=5 then
		setcolor 0,170,0
	elseif color=6 then
		setcolor 170,85,0
	elseif color=7 then
		setcolor 0,170,170
	end if
end sub
